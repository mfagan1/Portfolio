<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <% include ./partials/header %>
    <title>Your Tickets</title>
</head>

<body>
    <div class="jumbotron" style = "background-color:rgb(0, 255, 213);">
        <h1 class="display-4">Your Tickets</h1>
        <a href="/storefront" class="btn btn-primary">Go to Movies Out Now</a>

        <% if(sc.items.length == 0) { %>
        <h3>Empty!</h3>
        <% } else { %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Qty</th>
                    <th scope="col">Unit Price</th>
                    <th scope="col">Subtotal</th>
                </tr>
            </thead>
            <tbody>
                <% for(const item of sc.items) { %>
                <tr>
                    <td><%= item.sbook.title %></td>
                    <td><%= item.qty %></td>
                    <td><%= utils.dollar.format(item.sbook.price) %></td>
                    <td><%= utils.dollar.format(item.sbook.price * item.qty) %></td>
                </tr>
                <% } %>
            </tbody>
        </table>
        Grand Total: <%= utils.dollar.format(sc.getTotal()) %>
        <% } %>
        <a href="/logout" class="btn btn-primary" role="button">Sign Out</a>
    </div>
    <% include ./partials/scripts %>
</body>

</html>